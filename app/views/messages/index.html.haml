.wrapper

  = render 'devise/shared/side_bar'  

.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        test-group
      .main-header__left-box__member-list
        
      .main-header__left-box__member-list__menber

    .main-header__edit-btn 
      = link_to "Edit", edit_group_path(params[:group_id]), method: :get
      
  .messages
  
    .message
      - @messages.each do |message|
        .message__upper-info
          .message__upper-info__talker
            = message.user.name
          .message__upper-info__date
            = message.created_at.strftime("%Y/%m/%d %H:%M")
        .message__text
          - if message.content.present?
            %p.lower-message__content
              = message.content
          = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
        
    
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
  