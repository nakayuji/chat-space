.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__user-name 
        = current_user.name 
      .side-bar__header__box__menu 
        .side-bar__header__box__menu__new-group
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
        .side-bar__header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .groups__messages
        .group
          = link_to group_messages_path(group) do
            .group__group-name
            = group.name
            .group__latest-
              = group.show_last_message
        